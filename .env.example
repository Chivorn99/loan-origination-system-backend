# ===========================================
# Loan Origination System - Environment Config
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_DB=loan_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# For external database (e.g., Supabase, AWS RDS)
DB_URL=jdbc:postgresql://localhost:5432/loan_db
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here

# ===========================================
# Application Configuration
# ===========================================
SPRING_PROFILES_ACTIVE=default
SERVER_PORT=8080

# ===========================================
# Docker Registry Configuration
# ===========================================
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE=your-username/loan-origination-system
IMAGE_TAG=latest

# ===========================================
# PgAdmin Configuration (Development only)
# ===========================================
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=admin

